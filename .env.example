# Vercel KV Database Configuration
# These will be automatically set by Vercel when you add KV to your project
KV_REST_API_URL=your_kv_rest_api_url_here
KV_REST_API_TOKEN=your_kv_rest_api_token_here

# Admin Authentication
# Set this to a secure random string for comment moderation access
ADMIN_SECRET=your_secure_admin_secret_here

# Optional: Rate limiting configuration
MAX_COMMENTS_PER_HOUR=3
COMMENT_MAX_LENGTH=500